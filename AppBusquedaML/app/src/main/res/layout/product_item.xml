<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="25dp"
        tools:src="@drawable/pru"
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginBottom="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:id="@+id/info_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                tools:text="@string/sample_title"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />

            <ImageButton
                android:background="@color/white"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            tools:text="@string/price_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="@string/quota_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="@string/shipping_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            tools:text="@string/availability_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="19dp"
            android:id="@+id/last_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:progressTint="@color/blueML"
                android:secondaryProgressTint="@color/blueML"
                android:layout_marginTop="-19dp"
                android:layout_marginLeft="-88dp"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:scaleX="0.2"
                android:scaleY="0.2" />
            <TextView
                android:layout_marginLeft="-80dp"
                tools:text="@string/score_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>